{
  "dashboard": {
    "title": "MeterSync Monitoring",
    "panels": [
      {
        "title": "Request Rate",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ]
      },
      {
        "title": "Response Time P95",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95"
          }
        ]
      },
      {
        "title": "Task Queue Size",
        "targets": [
          {
            "expr": "celery_task_queue_size",
            "legendFormat": "{{queue_name}}"
          }
        ]
      },
      {
        "title": "Sync Success Rate",
        "targets": [
          {
            "expr": "rate(sync_operations_total{status='success'}[5m]) / rate(sync_operations_total[5m])",
            "legendFormat": "Success Rate"
          }
        ]
      },
      {
        "title": "Active WebSocket Connections",
        "targets": [
          {
            "expr": "active_websocket_connections",
            "legendFormat": "Connections"
          }
        ]
      },
      {
        "title": "Import Tasks",
        "targets": [
          {
            "expr": "rate(celery_task_sent_total{name='import_meters_from_file'}[5m])",
            "legendFormat": "Started"
          },
          {
            "expr": "rate(celery_task_succeeded_total{name='import_meters_from_file'}[5m])",
            "legendFormat": "Succeeded"
          },
          {
            "expr": "rate(celery_task_failed_total{name='import_meters_from_file'}[5m])",
            "legendFormat": "Failed"
          }
        ]
      }
    ]
  }
}